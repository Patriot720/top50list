<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/item_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:layout_weight="17.5"
        android:text="username"
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/item_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="9dp"
        android:layout_marginRight="9dp"
        android:layout_toLeftOf="@+id/rank_diff"
        android:layout_toStartOf="@+id/rank_diff"
        android:layout_weight="17.5"
        android:lineSpacingExtra="8sp"
        android:text="Rank"
        android:textAlignment="viewStart"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/rank_diff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_weight="10"
        android:text="%"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/item_acc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_username"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/item_username"
        android:layout_weight="17.5"
        android:text="98.9%"
        android:textAlignment="viewStart"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/acc_diff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_rank"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/item_rank"
        android:layout_weight="10"
        android:textAlignment="viewEnd"
        android:textSize="24sp"
        tools:text="-10" />

    <TextView
        android:id="@+id/item_pp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_username"
        android:layout_alignStart="@+id/item_username"
        android:layout_centerVertical="true"
        android:layout_weight="17.5"
        android:text="TextView"
        android:textSize="24sp"
        tools:text="138488" />

    <TextView
        android:id="@+id/pp_diff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/item_pp"
        android:layout_toRightOf="@+id/item_pp"
        android:layout_weight="10"
        android:textSize="18sp"
        android:typeface="sans"
        tools:text="+50pp" />

</RelativeLayout>